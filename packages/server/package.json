{
  "name": "server",
  "version": "2.0.0",
  "description": "The new voting webapp for BEST Barcelona",
  "main": "./src/app.ts",
  "private": true,
  "engines": {
    "node": ">=14.15.4",
    "yarn": ">=2.4.1",
    "npm": "Please use yarn instead"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only ./src/app.ts |& ts-node-dev --respawn --transpile-only ./src/utils/PrettifyLogs.ts",
    "test": "nyc --reporter=text mocha -r ts-node/register ./test/**/*.test.ts",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "docs": "rm -r docs && typedoc ./src",
    "all": "mocha -r ts-node/register src/test/**/*.test.ts && eslint ./src && rm -r docs && typedoc ./src"
  },
  "keywords": [
    "webapp",
    "voting",
    "BEST",
    "backend",
    "typescript",
    "express",
    "node"
  ],
  "author": "Bernat Felip, Esteve Tarragó, Iñigo Moreno",
  "repository": "https://github.com/BESTUPC/voting-web-app/",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.1.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "google-auth-library": "^7.0.4",
    "interfaces": "workspace:packages/interfaces",
    "logform": "^2.2.0",
    "mongodb": "^3.6.6",
    "morgan": "^1.10.0",
    "nyc": "^15.1.0",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0",
    "path": "^0.12.7",
    "pino": "^6.11.3",
    "pino-http": "^5.5.0",
    "prettyjson": "^1.2.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/chai-as-promised": "^7.1.4",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.42",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.2",
    "@types/mongodb": "^3.6.12",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.0.3",
    "@types/passport": "^1.0.6",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/pino": "^6.3.8",
    "@types/pino-http": "^5.4.1",
    "@types/prettyjson": "^0.0.29",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "helmet": "^4.6.0",
    "mocha": "^8.4.0",
    "prettier": "^2.3.0",
    "sinon": "^10.0.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typedoc": "^0.20.36",
    "typedoc-plugin-markdown": "^3.8.1",
    "typescript": "^4.2.4"
  }
}
