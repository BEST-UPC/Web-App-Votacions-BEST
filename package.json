{
  "name": "webapp",
  "version": "2.0.0",
  "description": "The new voting webapp for BEST Barcelona",
  "main": "index.js",
  "engines": {
    "node": ">=14.15.4",
    "yarn": ">=2.4.1",
    "npm": "Please use yarn instead"
  },
  "scripts": {
    "postinstall": "husky install",
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "test": "nyc --reporter=text mocha -r ts-node/register src/test/**/*.test.ts",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "docs": "rm -r docs && typedoc --exclude \"./src/**/*.ts\"",
    "all": "mocha -r ts-node/register src/test/**/*.test.ts && eslint ./src && rm -r docs && typedoc --exclude \"./src/test/**/*.ts\""
  },
  "keywords": [
    "webapp",
    "voting",
    "BEST"
  ],
  "author": "Esteve Tarragó, Iñigo Moreno, Bernat Felip",
  "repository": "https://github.com/BESTUPC/voting-web-app/",
  "license": "ISC",
  "dependencies": {
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cookie-session": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "https": "^1.0.0",
    "mongodb": "^3.6.5",
    "nyc": "^15.1.0",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/cookie-session": "^2.0.42",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.2",
    "@types/mongodb": "^3.6.10",
    "@types/node": "^14.14.35",
    "@types/passport": "^1.0.6",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/sinon": "^9.0.11",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "sinon": "^9.2.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.32",
    "typedoc-plugin-external-module-name": "^4.0.6",
    "typedoc-plugin-markdown": "^3.6.0",
    "typescript": "^4.2.3"
  }
}
